<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/medSearchButtonBg"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:layout_margin="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_bg_med_search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/medSearchButton"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:layout_margin="5dp"
        android:clickable="true"
        android:scaleType="fitXY"
        android:src="@drawable/ic_fg_med_search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/medSearchText"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:paddingHorizontal="14dp"
        android:paddingVertical="10dp"
        android:src="@drawable/ic_fg_med_search_text"
        app:layout_constraintBottom_toBottomOf="@+id/medSearchButtonBg"
        app:layout_constraintEnd_toEndOf="@+id/medSearchButtonBg"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toStartOf="@+id/medSearchButtonBg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.37" />

    <ImageView
        android:id="@+id/articleSearchButtonBg"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:layout_margin="5dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:scaleType="fitXY"
        android:src="@drawable/ic_bg_article_search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.58"
        app:layout_constraintStart_toEndOf="@+id/medSearchButton"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/articleSearchButton"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:layout_margin="5dp"
        android:clickable="true"
        android:scaleType="fitXY"
        android:src="@drawable/ic_fg_article_search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.58"
        app:layout_constraintStart_toEndOf="@+id/medSearchButton"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/articleSearchText"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:paddingHorizontal="14dp"
        android:paddingVertical="10dp"
        android:src="@drawable/ic_fg_article_search_text"
        app:layout_constraintBottom_toBottomOf="@+id/articleSearchButtonBg"
        app:layout_constraintEnd_toEndOf="@+id/articleSearchButtonBg"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toStartOf="@+id/articleSearchButtonBg"
        app:layout_constraintTop_toTopOf="@+id/articleSearchButtonBg"
        app:layout_constraintVertical_bias="0.30" />

</androidx.constraintlayout.widget.ConstraintLayout>